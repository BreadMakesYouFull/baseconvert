<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.breadmakesyoufull.baseconvert</id>
  <name>baseconvert</name>
  <summary>
    Convert numbers between bases
  </summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>BreadMakesYouFull</developer_name>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  <description>
    <p>
      A small simple utility to convert any rational number between binary and base 36.
    </p>
    <p>
      Why use this instead of your average calculator / converter?
    </p>
    <ul>
      <li>Handles very large numbers!</li>
      <li>Any base between 2 and 36</li>
      <li>Flip the conversion instantly</li>
      <li>Touchscreen friendly</li>
      <li>Limited support for fractional numbers</li>
      <li>Also available as a python library</li>
    </ul>
  </description>
  <launchable type="desktop-id">io.github.breadmakesyoufull.baseconvert.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/BreadMakesYouFull/baseconvert/main/preview.png</image>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/BreadMakesYouFull/baseconvert/main/preview_light.png</image>
    </screenshot>
  </screenshots>
  <branding>
    <color type="primary" scheme_preference="light">#46a1ff</color>
    <color type="primary" scheme_preference="dark">#1c274d</color>
  </branding>
</component>
